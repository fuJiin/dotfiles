#!/bin/bash
# Read existing settings from stdin, merge statusLine config
input=$(cat)
if [ -z "$input" ] || [ "$input" = "{}" ]; then
    input='{}'
fi
{{ if eq .chezmoi.os "darwin" -}}
echo "$input" | jq '. + {
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title \"Claude Code\" -message \"Needs your attention\" -sound Glass"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title \"Claude Code\" -message \"Task complete\" -sound Glass"
          }
        ]
      }
    ]
  }
}'
{{ else -}}
echo "$input" | jq '. + {
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  }
}'
{{ end -}}
